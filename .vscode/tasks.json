{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Launch to Ray",
            "type": "shell",
            "command": "conda run --name infrastructure ray submit cluster.yml ${relativeFile}",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Stop ray cluster",
            "type": "shell",
            "command": "conda run --name infrastructure ray down cluster.yml --yes",
            "problemMatcher": [],
            "group": "build"
        },
        {
            "label": "Start/update ray cluster",
            "type": "shell",
            "command": "conda run --name infrastructure ray up cluster.yml --yes",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Ray dasboard",
            "type": "shell",
            "command": "conda run --name infrastructure ray dashboard cluster.yml",
            "problemMatcher": [],
            "group": "build"
        }
    ]
}